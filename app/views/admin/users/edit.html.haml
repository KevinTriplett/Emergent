%h5= "Editing #{@model.name}"

= simple_form_for @form, as: :user, url: admin_user_path(@model.id), method: :patch do |f|
  .row
    .col= f.error_notification
  .row
    .col= f.input :email, placeholder: "Email", label: false
  .row
    .col= f.input :greeter, as: :boolean, label: "Greeter"
  .row
    .col= f.button :submit, "Update", class: "btn-primary"
.row
  .col= link_to "Cancel", admin_users_path
