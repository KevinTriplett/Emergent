%h5= "Report for #{@survey.name}"

= link_to "Back", admin_survey_url(@survey)

#survey-stats
  %h4 Survey Statistics
  %ul
    %li
      %b Total invites:
      = @survey_invites.count
    %li
      %b Created (but not sent):
      = @survey_invites.where(state: SurveyInvite::STATUS[:created]).count
    %li
      %b Sent (but not opened):
      = @survey_invites.where(state: SurveyInvite::STATUS[:invite_sent]).count
    %li
      %b Opened (but not started):
      = @survey_invites.where(state: SurveyInvite::STATUS[:opened]).count
    %li
      %b Started (but not finished):
      = @survey_invites.where(state: SurveyInvite::STATUS[:started]).count
    %li
      %b Finished:
      = @survey_invites.where(state: SurveyInvite::STATUS[:finished]).count

#survey-container
  - @survey_questions.each_pair do |sg, asq|
    .survey-group-container.jumbotron.jumbotron-fluid{ id: "survey-group-#{sg.id}" }
      %h1.display-4.survey-group-name= sg.name
      %p.survey-group-description= sg.description
      %hr      
      #survey-questions-container
        - asq.each do |sq|
          = cell(Survey::Cell::SurveyReport, {survey_invites: @survey_invites, survey_question: sq})

= link_to "Back", admin_survey_url(@survey)
