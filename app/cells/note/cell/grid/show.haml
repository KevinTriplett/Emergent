.note{ data: {url: patch_url, id: note.id}, style: "background-color: #{color};" }
  .tools
    %button.move
      %i.bi-list
    %button.delete{ data: {url: delete_url, id: note.id, method: "delete", confirm: "Are you sure you want to delete this note?"} }
      %i.bi-trash3
    %i.bi-check.hidden
    %i.bi-exclamation.hidden
  .main
    %p
      Category:
      %span.note-category{ contenteditable: true }= category
    %p.note-text{ contenteditable: true }= text
