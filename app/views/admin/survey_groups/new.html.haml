%h5 New Survey Group

= simple_form_for @form, as: :survey_group, url: admin_survey_survey_groups_path(survey_id: @model.survey_id) do |f|
  .row
    .col= f.error_notification
  .row
    .col= f.input :name, placeholder: "Name", label: false
  .row
    .col= f.input :description, placeholder: "Description", label: false
  .row
    .col= f.input :votes_max, placeholder: "Total Votes", label: false
  .row
    .col= f.input :note_color, placeholder: "Notes Color (rgb)", label: false
  .row
    .col= f.input :note_style, placeholder: "Notes Style", label: false, collection: SurveyGroup::NOTE_STYLE
  .row
    .col
      %input{name: "return_to_notes", type: "hidden", value: @return_param}
  .row
    .col= f.button :submit, "Create Group", class: "btn-primary"
.row
  .col= link_to "Cancel", @cancel_url

