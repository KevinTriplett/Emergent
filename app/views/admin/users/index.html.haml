%h5= (@users.empty? ? "No " : "") + "Existing Members"

%table.users.table.table-bordered.table-striped{ data: {url: @update_url, token: @token} }
  %thead
    %tr
      %th Name
      %th Greeter
      %th Status
      %th.meeting
        When?
        %br
        %span.tzinfo (GMT)
      %th Shadow
      %th Notes
      %th.hidden Request
  %tbody
    - @users.each do |u|
      %tr{ data: {url: admin_user_url(u.id)}}
        %td.user-name= u.name
        %td.user-greeter= u.greeter
        %td.user-status= u.status
        %td.user-meeting-datetime= u.welcome_timestamp ? u.welcome_timestamp.picker_datetime : nil
        %td.user-shadow= u.shadow_greeter
        %td.user-notes{ title: truncate(u.notes, length: 500, separator: ' ') }= u.notes_abbreviated
        %td.hidden= u.request_timestamp
