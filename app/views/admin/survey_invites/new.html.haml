%h5 Send Survey Invite

= simple_form_for @form, as: :survey_invite, url: admin_survey_survey_invites_path do |f|
  .row
    .col= f.error_notification
  .row
    .col= "Survey: #{@survey.name}"
  .row
    .col.search-input
      %input.form-control#user-search{name: "user_search", placeholder: "Member Name", label: false, data: {url: user_search_path}}
      .autocom-box
      = f.input :user_id, as: :hidden, label: false
  .row
    .col= f.input :subject, placeholder: "Subject Line", label: false
  .row
    .col= f.input :body, placeholder: "Invitation Text", label: false
  .row
    .col= f.button :submit, "Send Invite", class: "btn-primary"
.row
  .col= link_to "Cancel", admin_survey_survey_invites_path

